                                <RadialGradientBrush Center="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
                                    <GradientStop Color="#58D68D" Offset="0"/>
                                    <GradientStop Color="#27AE60" Offset="0.6"/>
                                    <GradientStop Color="#1D8348" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Border Grid.Column="2" Style="{StaticResource AlarmEditBorder}">
                            <TextBlock Grid.Column="2" Text="Normal" Style="{StaticResource AlarmDescription}"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="F3" Style="{StaticResource h3-text}"/>
                        <Ellipse Grid.Column="1" Style="{StaticResource StatusIndicatorStyle}">
                            <Ellipse.Fill>
                                <RadialGradientBrush Center="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
                                    <GradientStop Color="#58D68D" Offset="0"/>
                                    <GradientStop Color="#27AE60" Offset="0.6"/>
                                    <GradientStop Color="#1D8348" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Border Grid.Column="2" Style="{StaticResource AlarmEditBorder}">
                            <TextBlock Grid.Column="2" Text="Normal" Style="{StaticResource AlarmDescription}"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="F4" Style="{StaticResource h3-text}"/>
                        <Ellipse Grid.Column="1" Style="{StaticResource StatusIndicatorStyle}">
                            <Ellipse.Fill>
                                <RadialGradientBrush Center="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
                                    <GradientStop Color="#58D68D" Offset="0"/>
                                    <GradientStop Color="#27AE60" Offset="0.6"/>
                                    <GradientStop Color="#1D8348" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Border Grid.Column="2" Style="{StaticResource AlarmEditBorder}">
                            <TextBlock Grid.Column="2" Text="Normal" Style="{StaticResource AlarmDescription}"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Column="2" Grid.Row="1" BorderThickness="1" BorderBrush="#BDC3C7" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto" MinHeight="120"/>
                    <RowDefinition Height="Auto" MinHeight="220"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource gray400}" Padding="10">
                    <TextBlock Text="Operation" Style="{StaticResource HeaderTextStyle-title}" Width="auto"/>
                </Border>
                <!-- FFU Headers - Simple Windows Style -->
                <UniformGrid Grid.Row="1" Rows="1" Columns="5" Margin="0,15,0,8" >
                    <Border Style="{StaticResource FFUBorderStyle}" Margin="10,0">
                        <TextBlock Text="FFU 1" Style="{StaticResource FFUHeaderStyle}" Width="100" TextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource FFUBorderStyle}" Margin="10,0">
                        <TextBlock Text="FFU 2" Style="{StaticResource FFUHeaderStyle}" Width="100" TextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource FFUBorderStyle}" Margin="10,0">
                        <TextBlock Text="FFU 3" Style="{StaticResource FFUHeaderStyle}" Width="100" TextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource FFUBorderStyle}" Margin="10,0">
                        <TextBlock Text="FFU 4" Style="{StaticResource FFUHeaderStyle}" Width="100" TextAlignment="Center"/>
                    </Border>

                </UniformGrid>

                <!-- ON/OFF Buttons -->
                <UniformGrid Grid.Row="2" Rows="1" Columns="5" Margin="0,5,0,5">
                    <dxe:CheckEdit Height="40" Style="{StaticResource slider}" Width="100" Margin="0,0,5,0" 
                          x:Name="chk_fffu_onoff1" Tag="1" Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
                    <dxe:CheckEdit Height="40" Style="{StaticResource slider}" Width="100" Margin="0,0,5,0" 
                          x:Name="chk_fffu_onoff2" Tag="2" Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
                    <dxe:CheckEdit Height="40" Style="{StaticResource slider}" Width="100" Margin="0,0,5,0" 
                          x:Name="chk_fffu_onoff3" Tag="3" Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
                    <dxe:CheckEdit Height="40" Style="{StaticResource slider}" Width="100" Margin="0,0,5,0" 
                          x:Name="chk_fffu_onoff4" Tag="4" Checked="OnChkChecked" Unchecked="OnChkUnchecked" />

                </UniformGrid>

                <!-- RPM Control -->
                <Border Grid.Row="3" Margin="0,10,0,0" BorderThickness="0,1,0,0" BorderBrush="{StaticResource gray400}">
                    <TextBlock Text="RPM Control" Style="{StaticResource HeaderTextStyle-content}"/>
                </Border>

                <UniformGrid Grid.Row="4" Rows="1" Columns="5" Margin="0,0,0,5">
                    <!-- RPM Values Row -->
                    <Border Style="{StaticResource ValueDisplayStyle}" HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtSetRpm1" Text="0" Width="50" TextAlignment="Center" HorizontalAlignment="Center"
                     Margin="0,4,0,4" Style="{StaticResource ValueTextStyle}"/>
                    </Border>
                    <Border Style="{StaticResource ValueDisplayStyle}" HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtSetRpm2" Text="0" Width="50" TextAlignment="Center" HorizontalAlignment="Center"
                           Margin="0,4,0,4" Style="{StaticResource ValueTextStyle}"/>
                    </Border>
                    <Border Style="{StaticResource ValueDisplayStyle}" HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtSetRpm3" Text="0" Width="50" TextAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,4,0,4" Style="{StaticResource ValueTextStyle}"/>
                    </Border>
                    <Border Style="{StaticResource ValueDisplayStyle}" HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtSetRpm4" Text="0" Width="50" TextAlignment="Center" HorizontalAlignment="Center"
                     Margin="0,4,0,4" Style="{StaticResource ValueTextStyle}"/>
                    </Border>

                </UniformGrid>

                <Border Grid.Row="5" BorderThickness="0,0,0,1" BorderBrush="{StaticResource gray400}">
                    <UniformGrid Rows="2" Columns="5" Margin="0,0,0,3">
                        <!-- RPM Arrow Buttons Row -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="▲" x:Name="BtnUp1" Tag="1" Click="OnUpClick"  Style="{StaticResource ArrowButtonStyle}" />
                            <Button Content="▼" x:Name="BtnDown1" Tag="1" Click="OnDownClick" Style="{StaticResource ArrowButtonStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="▲" x:Name="BtnUp2" Tag="2" Click="OnUpClick"     Style="{StaticResource ArrowButtonStyle}"/>
                            <Button Content="▼" x:Name="BtnDown2" Tag="2" Click="OnDownClick"   Style="{StaticResource ArrowButtonStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="▲" x:Name="BtnUp3" Tag="3" Click="OnUpClick"      Style="{StaticResource ArrowButtonStyle}"/>
                            <Button Content="▼" x:Name="BtnDown3" Tag="3" Click="OnDownClick"    Style="{StaticResource ArrowButtonStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="▲" x:Name="BtnUp4" Tag="4" Click="OnUpClick"  Style="{StaticResource ArrowButtonStyle}"/>
                            <Button Content="▼" x:Name="BtnDown4" Tag="4" Click="OnDownClick"  Style="{StaticResource ArrowButtonStyle}"/>
                        </StackPanel>

                    </UniformGrid>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Column="2" Grid.Row="2">
            <UniformGrid Grid.Row="2" Columns="6" Margin="8">
                <Ellipse x:Name="StatusCircle1" Width="32" Height="32" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="4"/>
                <Ellipse x:Name="StatusCircle2" Width="32" Height="32" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="4"/>
                <Ellipse x:Name="StatusCircle3" Width="32" Height="32" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="4"/>
                <Ellipse x:Name="StatusCircle4" Width="32" Height="32" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="4"/>
                <Ellipse x:Name="StatusCircle5" Width="32" Height="32" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="4"/>
                <Ellipse x:Name="StatusCircle6" Width="32" Height="32" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="4"/>
            </UniformGrid>
        </Grid>
    </Grid>

</Page>
