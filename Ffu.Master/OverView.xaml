            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="15,0,5,0"/>
        </Style>
        <!-- ValueDisplayStyle - Simple Windows Style Value Display -->
        <Style x:Key="ValueDisplayStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource gray100}"/>
            <Setter Property="BorderBrush" Value="{StaticResource gray400}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>

