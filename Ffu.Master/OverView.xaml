        </Style>
        <Style x:Key="HeaderTextStyle-content" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Microsoft YaHei UI, Malgun Gothic"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
