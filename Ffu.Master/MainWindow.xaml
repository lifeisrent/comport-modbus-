<Window x:Class="Ffu.Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FFU Master" Height="600" Width="1000" ResizeMode="NoResize">
    <Grid x:Name="mGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="12" Grid.Row="0" Grid.Column="0" Height="272" Width="535" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="525*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.ColumnSpan="2">
                <TextBlock Text="FFU ID(s):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtIds" Width="160" Text="1,2" Margin="0,0,16,0"/>
                <TextBlock Text="COM Port:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtCom" Width="80" Text="COM6"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8" Grid.ColumnSpan="2">
                <Button x:Name="BtnOpen" Content="Open" Width="90" Click="BtnOpen_Click" Margin="0,0,8,0"/>
                <Button x:Name="BtnClose" Content="Close" Width="90" Click="BtnClose_Click" Margin="0,0,8,0" IsEnabled="False"/>
                <Button x:Name="BtnStart" Content="Start Send" Width="110" Click="BtnStart_Click" Margin="0,0,8,0" IsEnabled="False"/>
                <Button x:Name="BtnStop" Content="Stop" Width="90" Click="BtnStop_Click" IsEnabled="False"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8" Grid.ColumnSpan="2">
                <TextBlock Text="Mode:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="CmbMode" Width="120">
                    <ComboBoxItem Content="Request (0x05)" IsSelected="True"/>
                    <ComboBoxItem Content="Set RPM (0x06)"/>
                </ComboBox>
                <TextBlock Text="Target RPM:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <TextBox x:Name="TxtTargetRpm" Width="80" Text="0"/>
            </StackPanel>

            <TextBox x:Name="TxtLog" Grid.Row="3" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Grid.ColumnSpan="2"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <UniformGrid Grid.Row="0" Rows="1" Columns="6" Margin="8">
                  <!-- ID 1 -->
  <StackPanel Margin="4">
    <TextBlock Text="ID 1" HorizontalAlignment="Center"/>
    <TextBox x:Name="TxtRpm1" Text="0" IsReadOnly="True" Width="50"
             HorizontalContentAlignment="Right" Margin="0,4,0,4"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="▲" Tag="1" Click="OnUpClick"   Width="32" Margin="2,0"/>
      <Button Content="▼" Tag="1" Click="OnDownClick" Width="32" Margin="2,0"/>
    </StackPanel>
  </StackPanel>

  <!-- ID 2 -->
  <StackPanel Margin="4">
    <TextBlock Text="ID 2" HorizontalAlignment="Center"/>
    <TextBox x:Name="TxtRpm2" Text="0" IsReadOnly="True" Width="50"
             HorizontalContentAlignment="Right" Margin="0,4,0,4"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="▲" Tag="2" Click="OnUpClick"   Width="32" Margin="2,0"/>
      <Button Content="▼" Tag="2" Click="OnDownClick" Width="32" Margin="2,0"/>
    </StackPanel>
  </StackPanel>

  <!-- ID 3 -->
  <StackPanel Margin="4">
    <TextBlock Text="ID 3" HorizontalAlignment="Center"/>
    <TextBox x:Name="TxtRpm3" Text="0" IsReadOnly="True" Width="50"
             HorizontalContentAlignment="Right" Margin="0,4,0,4"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="▲" Tag="3" Click="OnUpClick"   Width="32" Margin="2,0"/>
      <Button Content="▼" Tag="3" Click="OnDownClick" Width="32" Margin="2,0"/>
    </StackPanel>
  </StackPanel>

  <!-- ID 4 -->
  <StackPanel Margin="4">
    <TextBlock Text="ID 4" HorizontalAlignment="Center"/>
    <TextBox x:Name="TxtRpm4" Text="0" IsReadOnly="True" Width="50"
             HorizontalContentAlignment="Right" Margin="0,4,0,4"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="▲" Tag="4" Click="OnUpClick"   Width="32" Margin="2,0"/>
      <Button Content="▼" Tag="4" Click="OnDownClick" Width="32" Margin="2,0"/>
    </StackPanel>
  </StackPanel>

  <!-- ID 5 -->
  <StackPanel Margin="4">
    <TextBlock Text="ID 5" HorizontalAlignment="Center"/>
    <TextBox x:Name="TxtRpm5" Text="0" IsReadOnly="True" Width="50"
             HorizontalContentAlignment="Right" Margin="0,4,0,4"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="▲" Tag="5" Click="OnUpClick"   Width="32" Margin="2,0"/>
      <Button Content="▼" Tag="5" Click="OnDownClick" Width="32" Margin="2,0"/>
    </StackPanel>
  </StackPanel>

  <!-- ID 6 -->
  <StackPanel Margin="4">
    <TextBlock Text="ID 6" HorizontalAlignment="Center"/>
    <TextBox x:Name="TxtRpm6" Text="0" IsReadOnly="True" Width="50"
             HorizontalContentAlignment="Right" Margin="0,4,0,4"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="▲" Tag="6" Click="OnUpClick"   Width="32" Margin="2,0"/>
      <Button Content="▼" Tag="6" Click="OnDownClick" Width="32" Margin="2,0"/>
    </StackPanel>
  </StackPanel>
            </UniformGrid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8">
            <CheckBox Content="ID 1 (800/0)" Tag="1"
            Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
            <CheckBox Content="ID 2 (800/0)" Tag="2"
            Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
            <CheckBox Content="ID 3 (800/0)" Tag="3"
            Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
            <CheckBox Content="ID 4 (800/0)" Tag="4"
            Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
            <CheckBox Content="ID 5 (800/0)" Tag="5"
            Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
            <CheckBox Content="ID 6 (800/0)" Tag="6"
            Checked="OnChkChecked" Unchecked="OnChkUnchecked" />
        </StackPanel>
        </Grid>
    </Grid>
    
</Window>
