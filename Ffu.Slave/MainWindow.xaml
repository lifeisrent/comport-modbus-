<Window x:Class="Ffu.Slave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FFU Slave" Height="370" Width="823" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="FFU ID(s):" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="TxtIds" Width="160" Text="1,2" Margin="0,0,16,0"/>
            <TextBlock Text="COM Port:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="TxtCom" Width="80" Text="COM6" Margin="0,0,16,0"/>

        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <Button x:Name="BtnOpen" Content="Open" Width="90" Click="BtnOpen_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnClose" Content="Close" Width="90" Click="BtnClose_Click" Margin="0,0,8,0" IsEnabled="False"/>
            <Button x:Name="BtnStart" Content="Start Listen" Width="110" Click="BtnStart_Click" Margin="0,0,8,0" IsEnabled="False"/>
            <Button x:Name="BtnStop" Content="Stop" Width="90" Click="BtnStop_Click" IsEnabled="False"/>
        </StackPanel>

        <ItemsControl Grid.Row="2" ItemsSource="{Binding WatchSlots}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox Width="60"
                 Text="{Binding WatchId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Width="80" Margin="8,0,0,0"
                 IsReadOnly="True"
                 Text="{Binding CurrentRpm}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


        <TextBox x:Name="TxtLog" Grid.Row="3" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</Window>
